{
  "name": "minitools-universe",
  "version": "0.1.2",
  "description": "Static HTML tool suite with dev helpers",
  "scripts": {
    "serve": "live-server .",
    "preview": "http-serve -p 8080 .",
    "build": "tailwindcss -m -o style.min.css",
    "run": "dotenv -e .env -- node scripts/codex.js \"$PROMPT\"",
    "lint": "htmlhint '**/*.html' && stylelint '**/*.css' && eslint '**/*.js'",
    "minify:html": "html-minifier-terser --collapse-whitespace --remove-comments -o dist/ %s",
    "minify:css": "cleancss -o dist/style.min.css style.css",
    "minify:js": "terser --compress --mangle -o dist/app.min.js -- app.js",
    "audit": "lighthouse http://localhost:8080 --chrome-flags='--headless' --only-categories=performance,accessibility,seo",
    "accessibility": "pa11y http://localhost:8080",
    "check-links": "linkinator http://localhost:8080 --recurse"
  },
  "devDependencies": {
    "eslint": "^9.29.0",
    "stylelint": "^16.20.0",
    "htmlhint": "^1.5.1",
    "live-server": "^1.2.2",
    "http-serve": "^1.0.0",
    "html-minifier-terser": "^7.2.0",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.42.0",
    "lighthouse": "^12.6.1",
    "pa11y": "^8.0.0",
    "linkinator": "^6.1.2",
    "sitemap-generator": "^8.5.1",
    "dotenv-cli": "^8.0.0",
    "openai": "^5.3.0",
    "@tailwindcss/cli": "^0.1.0",
    "tailwindcss": "^3.4.4"
  },
  "engines": {
    "node": ">=20"
  }
}
