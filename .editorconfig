# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation (2 spaces for most files, 4 for Python)
[*.{js,json,css,html,md,yml,yaml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

# Makefiles use tabs for indentation
[Makefile]
indent_style = tab
