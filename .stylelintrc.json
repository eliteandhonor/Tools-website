{
  "$schema": "https://stylelint.io/schema.json",
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "layer",
        "variants",
        "responsive",
        "screen"
      ]
    }],
    "selector-id-pattern": null,
    "string-quotes": "double"
  }
}
